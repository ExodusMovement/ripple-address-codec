{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
